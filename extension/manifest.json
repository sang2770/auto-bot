{
  "manifest_version": 3,
  "name": "Simulate Bet",
  "description": "Simulate",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": ""
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bot.js", "content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["media/*", "communication.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
